{% extends 'layouts/dashboard.twig' %}

{% block pageContent %}

	<div class="col-sm-12">

		<div class="panel panel-default">
			<div class="panel-heading">
				Create a message
			</div>
			<div class="panel-body">
				{% include 'partials/errors.twig' %}
				<form action="{{ url('dashboard/messages/add') }}" method="POST" class="form-horizontal" enctype="multipart/form-data">

					<div class="form-group">
						<label for="name" class="col-sm-4 control-label">Contents *</label>
						<div class="col-sm-8">
							<input type="text" name="message" id="name" class="form-control" value="{{ contents }}">
						</div>
					</div>

					<input type="hidden" name="moduleAction" value="add" />

					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-6">
							<button type="submit" class="btn btn-default">
								<i class="fa fa-btn fa-plus"></i><span class="button-text">Create message</span>
							</button>
						</div>
					</div>

				</form>
				<p class="text-left"><a href="{{ url('dashboard/messages') }}">Cancel and go back</a></p>

			</div>
		</div>


{% endblock %}